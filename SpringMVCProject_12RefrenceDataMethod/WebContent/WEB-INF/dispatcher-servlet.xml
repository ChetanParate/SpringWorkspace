<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns:util="http://www.springframework.org/schema/util"
xsi:schemaLocation="http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans.xsd">

<bean id="stcmdValidator" class="com.chetan.mvc.validator.StudentCommandValidator"/>
 
 <bean id="src"  class="com.chetan.mvc.controller.StudentRegistrationController">
 	<property name="formView" value="register"/>
 	<property name="successView" value="register_result"/>
<!--  	<property name="service" ref="service"/> -->
 	<property name="sessionForm" value="true"/>
 	<property name="commandName" value="regCommand"/>
    <property name="commandClass"  value="com.chetan.mvc.command.RegistrationCommand"/>
    <property name="validator" ref="stcmdValidator"/>
 </bean>

 <bean id="messageSource" class="org.springframework.context.support.ResourceBundleMessageSource">
      <property name="basename" value="com/chetan/mvc/validator/StCommandValidationErrors"/>
  </bean>                        

 <bean id="surl" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
 	<property name = "mappings">
 		<props>
 			<prop key = "register.htm">src</prop>
 		</props>
 	</property>
 </bean>
 
 <!-- View Resolver -->
 <bean id="vr"  class="org.springframework.web.servlet.view.InternalResourceViewResolver">
       <property name="prefix" value="/WEB-INF/pages/"/>
       <property name="suffix" value=".jsp"/>
  </bean>
</beans>